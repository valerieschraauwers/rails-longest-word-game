<h1>New Game</h1>

  <% @letters.each do |letter|%>
    <h2><%= letter %></h2>
  <% end %>


<p> What is the longest word you can find? </p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="token" name="letters" type="hidden" value="<%= @letters.join(", ") %>"/>
  <input type="text" id="input" name="userword">
  <input type="submit" id="play" value="Play">
</form>
